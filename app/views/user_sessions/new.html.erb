<h1>Login</h1>

<%= form_tag user_sessions_path do %>

<div class="field">
	<%= label_tag :email %><br/>
	<%= text_field_tag :email, params[:email] %>
</div>
<div class="field">
	<%= label_tag :password %><br/>
	<%= password_field_tag :password %>
</div>
<div class="field">
	<%= label_tag :remember_me %><br/>
	<%= check_box_tag :remember_me %>
</div><br/>

<%= link_to "Hairdresser Log In", hairdresserlogin_url %>

<div class="actions">
	<%= button_tag "Login" %>
</div>

<% end %>
