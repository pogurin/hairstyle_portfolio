<h1>Login as Hairdresser</h1>

<%= form_tag hairdresser_sessions_path, :method => :post do %>

<div class="field">
	<%= label_tag :email %><br/>
	<%= text_field_tag :email, params[:email] %>
</div>
<div class="field">
	<%= label_tag :password %><br/>
	<%= password_field_tag :password %>
</div>

<div class="actions">
	<%= submit_tag "Login" %>
</div>

<% end %>