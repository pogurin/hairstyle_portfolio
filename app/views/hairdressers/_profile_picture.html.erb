<div class="large-4 columns">
	<% if @hairdresser.picture_url == nil %>
		<%= image_tag 'empty_pic.png' %>
	<% else %>
		<%= image_tag @hairdresser.picture_url %>
	<% end %>

	<% if current_hairdresser == @hairdresser %>
		<%= form_for @hairdresser do |f| %>
			<div class="field">
				<%= f.file_field :picture %>
				<%= f.hidden_field :picture_cache %>
			</div>
			<div class="field">
				<%= f.submit "Submit"%>
			</div>
		<% end %>
	<% end %>
</div>