
<%= link_to "LET`S MAKE AN APPOINTMENT", new_hairdresser_appointment_path(@hairdresser) %>


<div class ="profile">
	<div class="row">
		<h1><%= @hairdresser.first_name %> <%= @hairdresser.last_name %></h1>
		<div class="large-4 columns">
			<% if @hairdresser.picture_url == nil %>
			<%= image_tag 'empty_pic.png' %>
		<% else %>
			<%= image_tag @hairdresser.picture_url %>
		<% end %>
			<% if current_hairdresser %>
				<%= form_for @hairdresser do |f| %>
					<div class="field">
						<%= f.file_field :picture %>
						<%= f.hidden_field :picture_cache %>
					</div>

					<div class="field">
						<%= f.submit "Submit"%>
					</div>
				<% end %>
			<% end %>
		</div>
	
		<div class="small-4 columns">
			<h2>Profile</h2>
			<p><b>Profession:</b> <%= @hairdresser.career %></p>
			<p><b>Address:</b> <%= @hairdresser.salon_address %></p>
			<p><b>Website:</b> <%= @hairdresser.salon_url %></p>
			<p><%= @hairdresser.personal_message %></p>
		</div>
		<% if current_hairdresser %>
		<div class="small-4 columns">
			<h2>Current Status: <%= @available %></h2>
			<p><%= @hairdresser.status %></p>
			<dl class="accordion" data-accordion>
				<dd class="accordion-navigation">
			    <a href="#panel2">Edit Status</a>
			    <div id="panel2" class="content">
				    <%= form_for @hairdresser do |f| %>
						<div class="field">
							<%= f.text_area :status %>
						</div>
						<h2>Available?</h2>
						<p>
							<%= f.radio_button :available, true %>Yes
							<%= f.radio_button :available, false %>No
							<div class="field">
							<%= f.submit "Submit"%>
							</div>
						</p>

						
					<% end %>	
			    </div>
			  </dd>
			 </dl>
			

		</div>
		<% end %>
	</div>

	<div class="row">
		<% if current_hairdresser %>
		<h1>Portfolio</h1>
			<div class="row">
				<h2>Upload New Photo</h2>
				<div class="large-3 columns">
					<h3>File</h3>
					<%= form_for @hairdresser.pictures.build do |f| %>
						<div class="field">
							<%= f.file_field :picture %>
							<%= f.hidden_field :picture_cache %>
						</div>
						<div class="field">
							<%= f.submit "Submit"%>
						</div>
						  <% Category.all.each do |category| %>
					    <%= check_box_tag 'category_id', category.id, @hairdresser.pictures.include?(category) %>
					    <%= category.name %>
					  	<% end %>
					<% end %>
				</div>
				<div class="large-9 columns">
					 <label><h3>Tags</h3></label>
				      <input id="checkbox1" type="checkbox"><label for="checkbox1">Short Hair</label>
				      <input id="checkbox2" type="checkbox"><label for="checkbox2">Long Hair</label>
				      <input id="checkbox3" type="checkbox"><label for="checkbox3">Dyed Hair</label>
				      <input id="checkbox4" type="checkbox"><label for="checkbox4">Curly Hair</label>
				      <input id="checkbox5" type="checkbox"><label for="checkbox5">Straight Hair</label>
				      <input id="checkbox6" type="checkbox"><label for="checkbox6">Blonde Hair</label>
				</div>
			</div>	
			<div class="row">
				<h2>Photos</h2>
			</div>
		<% end %>
			
	</div>


	<!-- hairdresserprofilepic -->

	<% if current_user %>

		<h4>New Review</h4>

		<%= form_for [@hairdresser, @review], remote: true do |f| %>
			
			<div id="review_form_errors">
	      <% if @review.errors.any? %>
	        <%= render partial: 'reviews/review_form_errors' %>
	      <% end %>
	    </div>

			<div class="field">
				<%= f.label :comment %><br/>
				<%= f.text_area :comment %>
			</div>
			<div class="actions">
				<%= f.submit %>
			</div>
			
		<% end %>	

		<h3>Reviews</h3>

		<div id='review-list'>
			<%= render @hairdresser.reviews %>
		</div>
	<% elsif current_hairdresser %>

	<% else %>
		<p>Please <%= link_to "Log in", new_user_session_path %> to add a review.</p>
	<% end %>
	
</div>





