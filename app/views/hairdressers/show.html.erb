<div class ="profile">
	<div class="row">
		<h1><%= @hairdresser.first_name %> <%= @hairdresser.last_name %></h1>
		<div class="large-4 columns">
			<% if @hairdresser.picture_url == nil %>
			<%= image_tag 'empty_pic.png' %>
		<% else %>
			<%= image_tag @hairdresser.picture_url %>
		<% end %>
			<% if current_hairdresser %>
				<%= form_for @hairdresser do |f| %>
					<div class="field">
						<%= f.file_field :picture %>
						<%= f.hidden_field :picture_cache %>
					</div>

					<div class="field">
						<%= f.submit "Submit"%>
					</div>
				<% end %>
			<% end %>
		</div>

		<div class="small-4 columns">
			<h2>Profile</h2>
			<p><b>Profession:</b> <%= @hairdresser.career %></p>
			<p><b>Address:</b> <%= @hairdresser.salon_address %></p>
			<p><b>Website:</b> <%= @hairdresser.salon_url %></p>
			<p><%= @hairdresser.personal_message %></p>

		</div>
		<div class="small-4 columns">
			<h2>Current Status</h2>
			<%= @hairdresser.status %>
			<dl class="accordion" data-accordion>
				<dd class="accordion-navigation">
			    <a href="#panel2">Edit</a>
			    <div id="panel2" class="content">
				    <%= form_for @hairdresser do |f| %>
						<div class="field">
							<%= f.text_area :status %>
						</div>
						<h2>Available?</h2>
						<p>
							<%= f.label :available, "" %>
							<%= f.radio_button :available, false %>[Not now]
							<%= f.radio_button :available, true %>[Yes,please]
						</p>
						<div class="field">
							<%= f.submit "Submit"%>
						</div>
					<% end %>		
			    </div>
			  </dd>
			 </dl>
		</div>
	</div>









	<% if current_hairdresser %>
	<h1>Portfolio</h1>

		<%= form_for @hairdresser.pictures.build do |f| %>
			<div class="field">
				<%= f.label :picture %><br/>
				<%= f.file_field :picture %>
				<%= f.hidden_field :picture_cache %>
			</div>
			<div class="field">
				<%= f.submit "Submit"%>
			</div>
		<% end %>

	<% end %>



	<!-- hairdresserprofilepic -->

	<% if current_user %>

		<h4>New Review</h4>

		<%= form_for [@hairdresser, @review], remote: true do |f| %>
			
			<div id="review_form_errors">
	      <% if @review.errors.any? %>
	        <%= render partial: 'reviews/review_form_errors' %>
	      <% end %>
	    </div>

			<div class="field">
				<%= f.label :comment %><br/>
				<%= f.text_area :comment %>
			</div>
			<div class="actions">
				<%= f.submit %>
			</div>
			
		<% end %>	

		<h3>Reviews</h3>

		<div id='review-list'>
			<%= render partial: 'reviews/reviews' %>
		</div>
	<% elsif current_hairdresser %>

	<% else %>
		<p>Please <%= link_to "Log in", new_user_session_path %> to add a review.</p>
	<% end %>
	</div>
</div>

