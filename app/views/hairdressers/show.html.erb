<%= link_to "LET`S MAKE AN APPOINTMENT", new_hairdresser_appointment_path(@hairdresser) %>
 <script type="text/javascript"
    src="http://code.jquery.com/jquery-1.10.1.min.js"></script>


<div class="profile">
	<div class="row">
		<h1>
			<%= best_in_place_if @hairdresser.id == current_hairdresser.id, @hairdresser, :first_name, :type => :textarea, :nil => "Click me to add content!" %> <%= best_in_place_if @hairdresser.id == current_hairdresser.id, @hairdresser, :last_name, :type => :textarea, :nil => "Click me to add content!" %>
		</h1>

		<%= render "profile_picture" %>
		
		<%= render "hairdresser_information" %>
	</div> <!-- closing the class row -->
	<%= render "schedule" %>

	<%= render "portfolio_uploader" %>
			
	<div class="row">
		<h1>Photos</h1>
	</div>

	<% @hairdresser.pictures.each do |picture| %>
		<div class="hairstyle_picture">
			<td>
				<div class="box"><%= image_tag(picture.picture_url(:medium))%></div>
			</td>
		</div>1
	<% end %>

	<% if current_user %>
		<h4>New Review</h4>
		<%= form_for [@hairdresser, @review], remote: true do |f| %>
			
			<div id="review_form_errors">
	      <% if @review.errors.any? %>
	        <%= render partial: 'reviews/review_form_errors' %>
	      <% end %>
	    </div>

			<div class="field">
				<%= f.label :comment %><br/>
				<%= f.text_area :comment %>
			</div>

			<div class="actions">
				<%= f.submit %>
			</div>

		<% end %>	

		<h3>Reviews</h3>

		<div id='review-list'>
			<%= render @hairdresser.reviews %>
		</div>

	<% else %>
		<p>Please <%= link_to "Log in", new_user_session_path %> to add a review.</p>
	<% end %> <!-- ending if current user -->
	
</div> <!-- closing class profile -->