<div class="row">
	<h1>Schedule</h1>
	<% @dates.each do |element|  %>
		<div class="row">

			<div class = "small-3 columns">
				<%= element.strftime("%A ") %>
				<%= element.strftime("%m/%d/%Y") %>
			</div>

			<div class = "small-9 columns">
				<% @appointments.each do |event| %>
					<%= event.appointment_at %>
				<% end %>
			</div>

			<div class = "small-3 columns">
				<div class='nested-fields'> 
					<% if current_hairdresser && @hairdresser.id == current_hairdresser.id %> 
						<%= form_for [@hairdresser, @appointment] do |f| %>
						   	<%= f.datetime_select :appointment_at %>
						   	<%= f.text_field :message %>
						   	<%= f.text_field :user_id, :value => "0" %>
							<%= f.submit "Submit" %>
						<% end %>
					<% end %>	
				</div>
			</div>
		</div>
	<% end %>
</div>