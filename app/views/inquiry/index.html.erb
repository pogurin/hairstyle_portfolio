<%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
  <div class="page-header">

    <h1>Appointment of <%= @inquiry.hairdresser_first_name %></h1>
  </div>
 
  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>Input error!</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
 
  <h1>Welcome!! <%= @inquiry.name %></h1>
    <tr>
     Please write down your appointment details!!
      <%= f.text_area :message %>
        <%= f.hidden_field :hairdresser_email, value: @inquiry.hairdresser_email %>
        <%= f.hidden_field :hairdresser_first_name, value: @inquiry.hairdresser_first_name %>

  <%= f.submit 'Confirm', class: 'btn btn-primary' %>
<% end %>


