<h1><%= @category.name %></h1>
<div id="categories">

<ul class="small-block-grid-4">
<% @pictures_category.each do |picture| %>

	<% if picture.source != nil %>
		<li>
			<%= link_to image_tag(picture.source),  hairdresser_path(picture.hairdresser) %>
		</li> 
	<% else %>
		 <li>
		 	<%= link_to image_tag(picture.picture), hairdresser_path(picture.hairdresser) %>
		 </li> 
	<% end %>
<% end %>
</ul>